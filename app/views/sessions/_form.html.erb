
<%= form_with(model: @session, local: true) do |form| %>
  <%= form.label :name, style: "display: block" %>
  <%= form.text_field :name, class: 'form-control' %>
  
  <%= form.label :access_level, style: "display: block" %>
  <%= form.select :access_level, ["TA", "Professor"], class: 'form-control' %>
  
  <%= form.label :email_id, style: "display: block" %>
  <%= form.text_field :email_id, class: 'form-control' %>
  
  <%= form.label :password, style: "display: block" %>
  <%= form.password_field :password, class: 'form-,control' ,id: "password"%>
  
  <%= form.label :confirm_password, style: "display: block" %>
  <%= form.password_field :confirm_password, class: 'form-control', id: "confirm_password" %>
  
  <%= form.submit "Create Account" , id:"submit" %>
<% end %>