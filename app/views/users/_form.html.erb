<html>
  <body>
    <div class="form">
      <%= form_with(model: user) do |form| %>
        <%= render 'shared/error_messages' %>
        
        <div class="form__items">

            <div>
            <div class="form__lable"><%= form.label :name, style: "display: block" %></div>
            <div class="form__input"><%= form.text_field :name, class: 'form-control' %></div>
            </div><br>

            <div>
            <div class="form__lable"><%= form.label :email_id, style: "display: block" %></div>
            <div class="form__input"><%= form.text_field :email_id, class: 'form-control' %></div>
            </div><br>

            <div>
            <div class="form__lable"><%= form.label :password, style: "display: block" %></div>
            <div class="form__input"><%= form.password_field :password, class: 'form-,control' ,id: "password"%></div>
            </div><br>

            <div>
            <div class="form__lable"><%= form.label :password_confirmation, style: "display: block" %></div>
            <div class="form__input"><%= form.password_field :password_confirmation, class: 'form-control', id: "password_confirmation" %></div>
            </div><br>

            <div>
            <%= form.submit "Create Account" , id:"submit" %>
            </div>
        

        </div>
      <% end %>
    </div>
  </body>
</html>
