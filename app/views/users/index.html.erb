</div>
<header>
  <div class='container'>
    <nav>
      <ul>
        <li><%= link_to "Home", "/admin",:style=> 'align:center',:method => "get" %></li>
        <li><%=link_to "Upload Schedule", schedules_path,:style=> 'align:center',:method => "get" %></li>
        <li><%=link_to "View Schedule", view_path,:style=> 'align:center',:method => "get" %></li>
        <li><%=link_to "View All Users", users_path,:style=> 'align:center',:method => "get" %></li>
        <li><%= link_to "Log Out", "/logout",:style=> 'align:center',:method => "get" %></li>
      </ul>
    </nav>
  </div>
</header>

<h1>All Users</h1>



<table>
<tr>
    <th>Name</th>
    <th>Email Address</th>
    <th>Access Level</th>
    <th>Edit</th>
    <th>Delete</th>
</tr>
    <% @users.each do |user| %>
        <tr>
            <td><%= user['name'] %></td>
            <td><%= user['email_id'] %></td>
            <td><%= user['access_level'] %></td>
            <td><%= link_to "Edit", edit_user_path(user) %></td>

            <% if current_user[:access_level] == 'admin'%>
              <td><%= button_to "Delete", user, method: :delete, data: { turbo_confirm: "Are you sure", turbo: false  } %></td>
            <% end %>
        </tr>
    <% end %>
</table>

<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
