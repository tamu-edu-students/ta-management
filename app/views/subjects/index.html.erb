<h1>Assign Courses to Hired TA</h1>
<p style="color: green"><%= notice %></p>

<table>
  <tr>
    <th width='1%', align="center"><%= "Name"%> </th>
    <th width='1%', align="center"><%= "Email"%> </th>
    <th width='1%', align="center"><%= "UIN"%> </th>
    <th width='1%', align="center"><%= "Course name"%> </th>
    <th width='1%', align="center"><%= "Course section"%> </th>
    <th width='1%', align="center"> Actions</th>
  </tr>
  <% @students_selected.each do |student| %>
    <tr>
      <td width='1%', align="center"><%=link_to student.name, students_path(method: :get,:search => student.name)%></td>
      <td width='1%', align="center"><%=student.email_id %></td>
      <td width='1%', align="center"><%=student.uin %></td>
      <%= form_with(model: student) do |form| %>
        <td width='1%' , align="center">
          <div>
            <%= form.select :assigned_courses, options_for_select(@course_names, student.assigned_courses) %>
          </div>
          <br>
        </td>
        <td width='1%' , align="center">
          <div>
            <%= form.select :assigned_sections, options_for_select(@section_names, student.assigned_sections) %>
          </div>
          <br>
        </td>
        <td width='1%', align="center">
          <%= form.submit "Update" %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

<%= link_to "New subject", new_subject_path %>
